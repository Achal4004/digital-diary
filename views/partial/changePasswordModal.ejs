<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body" style="padding-bottom:4px;">
      <form action="/changePassword" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="p1">Current Password</label>
            <input name="opassword" type="password" class="form-control" id="p1" aria-describedby=""placeholder="Current Password" required minlength="6">
          </div>
          <div class="form-group">
            <label for="p2">New Password</label>
            <input name="npassword" type="password" class="form-control" id="p2" aria-describedby=""placeholder="New Password" required minlength="6">
          </div>
          <div class="form-group">
            <label for="p3">Confirm Password</label>
            <input name="cpassword" type="password" class="form-control" id="p3" aria-describedby=""placeholder="Confirm Password" required minlength="6">
          </div>
        </div>
        <div class="modal-footer" >
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>